<%- include('../partials/header')%>

    <body>
        <%- include('../partials/navbar')%>
            <%- include('../partials/sidebar')%>
                <div class="content">
                    <div class="panel panel-flat">
                        <div class="panel-body">
                            <h2 class="text-bold">Users</h2>
                            <table id="data-table" class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">S.no</th>
                                        <th scope="col">Image</th>
                                        <th scope="col">User Details</th>
                                        <th scope="col">CourseList</th>
                                        <!-- <th scope="col">Email</th> -->
                                        <th scope="col">Status</th>
                                        <th scope="col"><span>Action</span></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% data.forEach((users,i)=>{%>
                                        <tr>
                                            <td>
                                                <%= i+1 %>
                                            </td>
                                            <td>
                                                <img src="<%= users.image %>" alt="<%= users.image %>" height="50px"
                                                    width="50px">
                                            </td>
                                            <td>
                                                <table>
                                                    <tr>
                                                        <td>Name :: </td>
                                                        <td><%= users.name%></td>
                                                    </tr>
                                                    <tr>
                                                        <td>Email :: </td>
                                                        <td><%= users.email%></td>
                                                    </tr>
                                                    <tr>
                                                        <td>Mobile:: </td>
                                                        <td><%= users.mobile%></td>
                                                    </tr>
                                                </table>
                                            </td>
                                            <!-- <td>
                                                <%= users.mobile%>
                                            </td> -->
                                            <!-- <td>
                                                <%= users.email%>
                                            </td> -->

                                            <td>
                                                <a href="/usercourse/<%= users.id %>" view class="btn btn-info"
                                                    class="<%= (title == 'usercourse'?'active':'') %>">view</a>
                                            </td>
                                            <td>
                                                <% if(users.status==1) { %>
                                                    <button class=" btn-success status btn" data-id="<%=users.id%>"
                                                        value="0">Active</button>
                                                    <% } else { %>
                                                        <button class=" btn-danger status" data-id="<%=users.id%>"
                                                            value="1" style="display: flex;
                                width: 120%;">In-active</button>
                                                        <% } %>
                                            </td>
                                            <td>
                                                <a href="/viewuser/<%= users.id %>" view class="btn btn-info"
                                                    class="<%= (title == 'view_active'?'active':'') %>">view</a>
                                            </td>
                                        </tr>
                                        <%})%>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <%- include('../partials/footer')%>
    </body>

    </html>
    <script>
        // $(document).ready(() => {
        console.log('====================script==========================');
        $('.status').click(function () {
            // alert('clicked') 
            var id = $(this).attr('data-id')
            var value = $(this).attr('value')
            // alert(id)
            $.ajax({
                type: "post",
                url: "/userstatus",
                data: {

                    id: id,
                    value: value
                },
                success: function (data) {
                    window.location.reload();
                }
            });
        });
    // });
    </script>
    <script>
        $(document).ready(function () {
            $('#data-table').DataTable();
        });
    </script>